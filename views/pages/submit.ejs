<% include ../partials/header %>

<h2>Submit form page</h2>

<div class="submit-form-container">
    <form action="/submitForm" method="post" id="js-form" class="search-form">
        <div class="row">
            <label for="firstName" class="label-hidden">First Name</label>
            <input type="text" name="firstName" id="js-search-term" placeholder="First Name" role="combobox" required>
        </div>
        <div class="row">
            <label for="lastName" class="label-hidden">Last Name</label>
            <input type="text" name="lastName" id="js-search-term" placeholder="Last Name" role="combobox" required>
        </div>
        <div class="row">
            <label for="email" class="label-hidden">Email</label>
            <input type="text" name="email" id="js-search-term" placeholder="Email" role="combobox" required>
        </div>
        <div class="row">
            <label for="phone" class="label-hidden">Phone</label>
            <input type="text" name="phone" id="js-search-term" placeholder="Phone Number" role="combobox" required>
        </div>
        <div class="row">
            <label for="address" class="label-hidden">Address</label>
            <input type="text" name="address" id="js-search-term" placeholder="Address" role="combobox">
        </div>
        <div class="row">
                <label for="monthlyRent class="label-hidden">Monthly Rent</label>
                <input type="text" name="monthlyRent" id="js-search-term" placeholder="Monthly Rent" role="combobox">
            </div>
        <div class="row">
            <label for="leaseRemainder" class="label-hidden">Lease Remainder</label>
            <input type="text" name="leaseRemainder" id="js-search-term" placeholder="Lease Remainder" role="combobox">
        </div>
        <div class="row">
            <label for="comments" class="label-hidden">Comments</label>
            <input type="text" name="comments" id="js-search-term" placeholder="Comments" role="combobox">
        </div>

        <input type="submit" class="form-input btn" value="Submit" role="button">
    </form>
</div>

<p id="js-error-message" class="error-message"></p>

<% include ../partials/footer %>
